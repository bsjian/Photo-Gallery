<% include ../partials/header %>
  <header class="jumbotron">
    <h1><span class="glyphicon glyphicon-camera align-bottom" aria-hidden="true"></span> Welcome to Bosheng's Gallery!</h1>
    <p>View and upload your photos!</p>
    <form class="form-inline" action="/photos" method="GET">
      <div class="form-group has-feedback">
        <label for="search"></label>
        <input class="form-control" type="text" name="search" placeholder="Search photos" autocomplete="off" />
        <span class="glyphicon glyphicon-search form-control-feedback" aria-hidden="true"></span>
      </div>
    </form>
    <hr>
    <a class="pull-right" href="/photos/new">
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      Upload New Photo
    </a>
  </header>

  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <div class="bosheng-album" category="PUZZLE">
      <% photos.forEach(photo => {%>
          <img data-src="<%= photo.image.url %>" alt="<%= photo.name %>" href="/photos/<%= photo._id %>" />
      <% })%>
    </div>
  </div>
<% include ../partials/footer %>
